@model  IEnumerable<Aplicacion.Entities.Shipments>

<h2 class="title" style="color:darkblue;"> Shipping Details </h2>

<div class="container">
    <table id="tbBrands" class="table table-striped table-bordered table-sm">
        <thead>
            <tr>
                <th @Html.DisplayNameFor(model => model.shipment_id)>Id</th>
                <th @Html.DisplayNameFor(model => model.shipment_order_id)>Order number</th>
                <th @Html.DisplayNameFor(model => model.shipment_date)>Shipping Date</th>
                <th @Html.DisplayNameFor(model => model.shipment_status)>Shipping Status</th>
                <th @Html.DisplayNameFor(model => model.shipment_address)>Address</th>
                <th @Html.DisplayNameFor(model => model.shipment_city)>City</th>
                <th @Html.DisplayNameFor(model => model.shipment_state)>State</th>
                <th @Html.DisplayNameFor(model => model.shipment_zip_code)>Zip code</th>
                <th @Html.DisplayNameFor(model => model.shipment_country)>Country</th>
                <th @Html.DisplayNameFor(model => model.shipment_phone)>Phone</th>
                <th @Html.DisplayNameFor(model => model.shipment_email)>Email</th>
                <th @Html.DisplayNameFor(model => model.shipment_customer_id)>Customer Id</th>
                <th>Action</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <p class="text-muted mb-0">@item.shipment_id</p>
                    </td>
                    <td>
                        <div class="d-flex align-items-center">

                            <div class="ms-3">
                                <p class="fw-bold mb-1">@item.shipment_order_id</p>
                            </div>
                        </div>
                    </td>
                    <td>
                        <div class="d-flex align-items-center">

                            <div class="ms-3">
                                <p class="fw-bold mb-1">@item.shipment_date</p>
                            </div>
                        </div>
                    </td>
                    <td>
                        <div class="d-flex align-items-center">

                            <div class="ms-3">
                                <p class="fw-bold mb-1">@item.shipment_status</p>
                            </div>
                        </div>
                    </td>
                    <td>
                        <div class="d-flex align-items-center">

                            <div class="ms-3">
                                <p class="fw-bold mb-1">@item.shipment_address</p>
                            </div>
                        </div>
                    </td>
                    <td>
                        <div class="d-flex align-items-center">

                            <div class="ms-3">
                                <p class="fw-bold mb-1">@item.shipment_city</p>
                            </div>
                        </div>
                    </td>
                    <td>
                        <div class="d-flex align-items-center">

                            <div class="ms-3">
                                <p class="fw-bold mb-1">@item.shipment_state</p>
                            </div>
                        </div>
                    </td>
                    <td>
                        <div class="d-flex align-items-center">

                            <div class="ms-3">
                                <p class="fw-bold mb-1">@item.shipment_zip_code</p>
                            </div>
                        </div>
                    </td>
                    <td>
                        <div class="d-flex align-items-center">

                            <div class="ms-3">
                                <p class="fw-bold mb-1">@item.shipment_country</p>
                            </div>
                        </div>
                    </td>
                    <td>
                        <div class="d-flex align-items-center">

                            <div class="ms-3">
                                <p class="fw-bold mb-1">@item.shipment_phone</p>
                            </div>
                        </div>
                    </td>
                    <td>
                        <div class="d-flex align-items-center">

                            <div class="ms-3">
                                <p class="fw-bold mb-1">@item.shipment_email</p>
                            </div>
                        </div>
                    </td>
                    <td>
                        <div class="d-flex align-items-center">

                            <div class="ms-3">
                                <p class="fw-bold mb-1">@item.shipment_customer_id</p>
                            </div>
                        </div>
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "EditShipments", new { Id = item.shipment_id }, new { @class = "btn btn-primary" })
                        
                    </td>
                    <td>
                        @Html.ActionLink("Delete", "DeleteShipment", new { Id = item.shipment_id }, new { @class = "btn btn-primary" })
                    </td>

                </tr>
            }

        </tbody>
    </table>
</div>



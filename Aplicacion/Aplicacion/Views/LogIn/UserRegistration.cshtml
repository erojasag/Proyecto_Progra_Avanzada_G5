                                            </div>
                                            <div class="form-group col-md-6">
                                                <label for="inputPassword">Repeat your password</label>
                                                <input type="password" class="form-control" id="inputPassword" placeholder="Password">
                                            </div>
                                        </div>
                                        <div class="form-row">
                                            <div class="form-group col-md-6">
                                                <label for="inputIdentification">Identification</label>
                                                @Html.TextBoxFor(Model => Model.Identification, new { @class = "form-control", @placeholder = "#########", @id = "inputIdentification", @maxlength = "9", @required = "required" })
                                            </div>
                                            <div class="form-group col-md-6">
                                                <label for="inputName">Name</label>
                                                @Html.TextBoxFor(Model => Model.Name, new { @class = "form-control", @placeholder = "Name", @id = "inputName", @required = "required" })
                                            </div>
                                            <div class="form-group col-md-6">
                                                <label for="inputFirstLastName">First Last Name</label>
                                                @Html.TextBoxFor(Model => Model.First_last_name, new { @class = "form-control", @placeholder = "First Last Name", @id = "inputFirstLastName", @required = "required" })
                                            </div>
                                            <div class="form-group col-md-6">
                                                <label for="inputLastName">Last Name</label>
                                                @Html.TextBoxFor(Model => Model.Second_last_name, new { @class = "form-control", @placeholder = "Last Name", @id = "inputLastName", @required = "required" })
                                            </div>
                                            <div class="form-group col-md-6">
                                                <label for="inputBirthDate">Birth Date</label>
                                                @Html.TextBoxFor(Model => Model.Birth_date, new { @class = "form-control", @id = "inputBirthDate", @type = "date", @required = "required" })
                                            </div>
                                            <div class="form-group col-md-6">
                                                <label for="inputPhone">Phone Number</label>
                                                @Html.TextBoxFor(Model => Model.Phone, new { @class = "form-control", @id = "inputPhone", @maxlength = "8", @placeholder = "####-####", @required = "required" })
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label for="inputAddress">Address</label>
                                            @Html.TextBoxFor(Model => Model.Address, new { @class = "form-control", @id = "inputAddress", @placeholder = "1234 Main St", @required = "required" })
                                        </div>

                                        <div class="form-group">
                                            <label for="foto">Foto de Perfil:</label>
                                            <div class="input-group has-validation">
                                                
                                                @Html.TextBoxFor(Model => Model.Photo, new { @type = "file", @class = "form-control" })
                                            </div>
                                        </div>
                                        <br />
                                        <div class="form-check d-flex justify-content-center mb-5">
                                            <label class="form-check-label" for="form2Example3g">
                                                <input class="form-check-input center" type="checkbox" value="" id="form2Example3g" required />

@model  Aplicacion.Entities.Users
@using Aplicacion.Entities

@{
    var sesion = ((Users)Session["User"]);
}

@using (Html.BeginForm("ValidateUser", "Users", FormMethod.Post))
{
    if (sesion != null)
    {
        if (sesion.User_Role != 0 && sesion.User_Role == 1)//registrar una cuenta de usuario desde un usuario admin
        {
            <section class="vh-100 bg-image"
                     style="background-image: url('https://mdbcdn.b-cdn.net/img/Photos/new-templates/search-box/img4.webp');">
                <div class="mask d-flex align-items-center h-100 gradient-custom-3">
                    <div class="container h-100">
                        <div class="row d-flex justify-content-center align-items-center h-100">
                            <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                                <div class="card" style="border-radius: 15px;">
                                    <div class="card-body p-5">
                                        <h2 class="text-uppercase text-center mb-5">Register a new Account</h2>
                                        <form method="post" action="">
                                            <div class="form-row">
                                                <div class="form-group col-md-6">
                                                    <label for="inputUsername">Username</label>
                                                    @Html.TextBoxFor(Model => Model.Username, new { @class = "form-control", @placeholder = "Username", @id = "inputUsername", @required = "required" })
                                                </div>
                                                <div class="form-group col-md-6">
                                                    <label for="inputEmail">Email</label>

                                                    @Html.TextBoxFor(Model => Model.Email, new { @class = "form-control", @placeholder = "Email", @id = "inputEmail", @required = "required", @type="email" })
                                                </div>
                                                <div class="form-group col-md-6">
                                                    <label for="inputPassword">Password</label>
                                                    @Html.PasswordFor(Model => Model.Password, new { @class = "form-control", @placeholder = "Password", @id = "inputPassword", @required = "required", @min="8" })
                                                    <i class="far fa-eye" id="togglePassword" onclick="TogglePass()"></i>
                                                </div>
                                                <div class="form-group col-md-6">
                                                    <label for="inputPassword">Repeat your password</label>
                                                    <input type="password" class="form-control" id="inputPassword" placeholder="Password">
                                                </div>
                                            </div>
                                            <div class="form-row">
                                                <div class="form-group col-md-6">
                                                    <label for="inputName">Name</label>

                                                    @Html.TextBoxFor(Model => Model.Name, new { @class = "form-control", @placeholder = "Name", @id = "inputName", @required = "required" })
                                                </div>
                                                <div class="form-group col-md-6">
                                                    <label for="inputFirstLastName">First Last Name</label>
                                                    @Html.TextBoxFor(Model => Model.First_last_name, new { @class = "form-control", @placeholder = "First Last Name", @id = "inputFirstLastName", @required = "required" })
                                                </div>
                                                <div class="form-group col-md-6">
                                                    <label for="inputLastName">Last Name</label>
                                                    @Html.TextBoxFor(Model => Model.Second_last_name, new { @class = "form-control", @placeholder = "Last Name", @id = "inputLastName", @required = "required" })
                                                </div>
                                                <div class="form-group col-md-6">
                                                    <label for="inputIdentification">Identification</label>
                                                    @Html.TextBoxFor(Model => Model.Identification, new { @class = "form-control", @placeholder = "#########", @id = "inputIdentification", @maxlength = "9", @required = "required" })
                                                </div>
                                                <div class="form-group col-md-6">
                                                    <label for="inputBirthDate">Birth Date</label>
                                                    @Html.TextBoxFor(Model => Model.Birth_date, new { @class = "form-control", @id = "inputBirthDate", @type = "date", @required = "required" })
                                                </div>
                                                <div class="form-group col-md-6">
                                                    <label for="inputPhone">Phone Number</label>
                                                    @Html.TextBoxFor(Model => Model.Phone, new { @class = "form-control", @id = "inputPhone", @maxlength = "8", @placeholder = "####-####", @required = "required" })
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label for="inputAddress">Address</label>
                                                @Html.TextBoxFor(Model => Model.Address, new { @class = "form-control", @id = "inputAddress", @placeholder = "1234 Main St", @required = "required" })
                                            </div>
                                            <div class="dropdown">
                                                <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                    User Type
                                                </button>
                                                <div class="form-group">

                                                    @{
                                                        List<SelectListItem> listaRoles = new List<SelectListItem>();
                                                        listaRoles.Add(new SelectListItem
                                                        {
                                                            Text = "--Select--",
                                                            Value = "",
                                                            Selected = true
                                                        });
                                                        listaRoles.Add(new SelectListItem
                                                        {
                                                            Text = "Administrador",
                                                            Value = "1"
                                                        });
                                                        listaRoles.Add(new SelectListItem
                                                        {
                                                            Text = "Cajero",
                                                            Value = "2"
                                                        });
                                                        listaRoles.Add(new SelectListItem
                                                        {
                                                            Text = "Cliente",
                                                            Value = "3"
                                                        });

                                                    }
                                                    <label class="col-lg-3 control-label">Rol:</label>
                                                    @Html.DropDownListFor(model => model.User_Role, listaRoles, new { @class = "form-control" })
                                                </div>
                                            </div>
                                            <div class="d-flex justify-content-center">
                                                <button type="submit"
                                                        class="btn btn-primary btn-block btn-lg gradient-custom-4 text-body">
                                                    Register
                                                </button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        }

        if (sesion.User_Role != 0 && sesion.User_Role == 2)//registrar una cuenta de usuario desde un usuario cajero
        {
            <section class="vh-100 bg-image"
                     style="background-image: url('https://mdbcdn.b-cdn.net/img/Photos/new-templates/search-box/img4.webp');">
                <div class="mask d-flex align-items-center h-100 gradient-custom-3">
                    <div class="container h-100">
                        <div class="row d-flex justify-content-center align-items-center h-100">
                            <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                                <div class="card" style="border-radius: 15px;">
                                    <div class="card-body p-5">
                                        <h2 class="text-uppercase text-center mb-5">Register a new Customer</h2>
                                        <form method="post" action="">
                                            <div class="form-row">
                                                <div class="form-group col-md-6">
                                                    <label for="inputUsername">Username</label>
                                                    @Html.TextBoxFor(Model => Model.Username, new { @class = "form-control", @placeholder = "Username", @id = "inputUsername", @required = "required" })
                                                </div>
                                                <div class="form-group col-md-6">
                                                    <label for="inputEmail">Email</label>

                                                    @Html.TextBoxFor(Model => Model.Email, new { @class = "form-control", @placeholder = "Email", @id = "inputEmail", @required = "required" })
                                                </div>
                                                <div class="form-group col-md-6">
                                                    <label for="inputPassword">Password</label>
                                                    @Html.PasswordFor(Model => Model.Password, new { @class = "form-control", @placeholder = "Password", id = "inputPassword", required = "required" })
                                                    <i class="far fa-eye" id="togglePassword" onclick="TogglePass()"></i>
                                                </div>
                                                <div class="form-group col-md-6">
                                                    <label for="inputPassword">Repeat your password</label>
                                                    <input type="password" class="form-control" id="inputPassword" placeholder="Password">
                                                </div>
                                            </div>
                                            <div class="form-row">
                                                <div class="form-group col-md-6">
                                                    <label for="inputName">Name</label>

                                                    @Html.TextBoxFor(Model => Model.Name, new { @class = "form-control", @placeholder = "Name", @id = "inputName", @required = "required" })
                                                </div>
                                                <div class="form-group col-md-6">
                                                    <label for="inputFirstLastName">First Last Name</label>
                                                    @Html.TextBoxFor(Model => Model.First_last_name, new { @class = "form-control", @placeholder = "First Last Name", @id = "inputFirstLastName", @required = "required" })
                                                </div>
                                                <div class="form-group col-md-6">
                                                    <label for="inputLastName">Last Name</label>
                                                    @Html.TextBoxFor(Model => Model.Second_last_name, new { @class = "form-control", @placeholder = "Last Name", @id = "inputLastName", @required = "required" })
                                                </div>
                                                <div class="form-group col-md-6">
                                                    <label for="inputIdentification">Identification</label>
                                                    @Html.TextBoxFor(Model => Model.Identification, new { @class = "form-control", @placeholder = "Identification", @id = "inputIdentification", @maxlength = "9", @required = "required" })
                                                </div>
                                                <div class="form-group col-md-6">
                                                    <label for="inputBirthDate">Birth Date</label>
                                                    @Html.TextBoxFor(Model => Model.Birth_date, new { @class = "form-control", @id = "inputBirthDate", @type = "date", @required = "required" })
                                                </div>
                                                <div class="form-group col-md-6">
                                                    <label for="inputPhone">Phone Number</label>
                                                    @Html.TextBoxFor(Model => Model.Phone, new { @class = "form-control", @id = "inputPhone", @maxlength = "8", @placeholder = "Phone Number", @required = "required" })
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label for="inputAddress">Address</label>
                                                @Html.TextBoxFor(Model => Model.Address, new { @class = "form-control", @id = "inputAddress", @placeholder = "1234 Main St", @required = "required" })
                                            </div>
                                            <div class="form-check d-flex justify-content-center mb-5">
                                                <label class="form-check-label" for="form2Example3g">
                                                    <input class="form-check-input center" type="checkbox" value="" id="form2Example3g" required />
                                                    I agree all statements in <a href="#!" class="text-body"><u>Terms of service</u></a>
                                                </label>
                                            </div>
                                            <div class="d-flex justify-content-center">
                                                <button type="submit"
                                                        class="btn btn-primary btn-block btn-lg gradient-custom-4 text-body">
                                                    Register
                                                </button>

                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

        }
    }
    else
    {


        <section class="vh-100 bg-image"
                style="background-image: url('https://mdbcdn.b-cdn.net/img/Photos/new-templates/search-box/img4.webp');">
            <div class="mask d-flex align-items-center h-100 gradient-custom-3">
                <div class="container h-100">
                    <div class="row d-flex justify-content-center align-items-center h-100">
                        <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                            <div class="card" style="border-radius: 15px;">
                                <div class="card-body p-5">
                                    <h2 class="text-uppercase text-center mb-5">Register a ShoeCorp account</h2>
                                    <form method="post" action="">

                                        @Html.HiddenFor(Model => Model.User_Role, new { Value = "3", @class = "form-control", @id = "inputRol" })
                                        <div class="form-row">
                                            <div class="form-group col-md-6">
                                                <label for="inputUsername">Username</label>
                                                @Html.TextBoxFor(Model => Model.Username, new { @class = "form-control", @placeholder = "Username", @id = "inputUsername", @required = "required" })
                                            </div>
                                            <div class="form-group col-md-6">
                                                <label for="inputEmail">Email</label>
                                                @Html.TextBoxFor(Model => Model.Email, new { @class = "form-control", @placeholder = "Email", @id = "inputEmail", @required = "required", @type="email" })
                                            </div>
                                            <div class="form-group col-md-6">
                                                <label for="inputPassword">Password</label>
                                                @Html.PasswordFor(Model => Model.noHashPass, new { @class = "form-control", @placeholder = "Password", @id = "inputPassword", @required = "required", @min="8" })

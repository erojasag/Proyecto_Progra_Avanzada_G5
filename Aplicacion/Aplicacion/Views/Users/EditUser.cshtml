@model Aplicacion.Entities.Users
@using Aplicacion.Entities

@{
    var sesion = ((Users)Session["User"]);
}

@if (sesion != null)
{
    @Html.Hidden("IdMsj", (string)ViewBag.Mensaje)
    using (Html.BeginForm("EditUser", "Users", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        //Html.HiddenFor(Model => Model.Id, new { @class = "form-control", @Id = "Id", @readonly = "readonly" })
        <div class="container bootstrap snippets bootdey">
            <hr>
            <div class="row">
                <!-- left column -->
                <div class="col-md-3">
                    <div class="text-center">
                        <img src=@Html.DisplayFor(model => model.Photo) class="avatar img-circle img-thumbnail" alt="avatar">
                        <h6>Upload a different photo...</h6>
                        @Html.EditorFor(model => model.Photo, new { htmlAttributes = new { @class = "form-control", @type = "file" } })
                    </div>
                </div>

                <!-- edit form column -->
                <div class="col-md-9 personal-info">
                    <div class="alert alert-info alert-dismissable">
                        <a class="panel-close close" data-dismiss="alert">×</a>
                        <i class="fa fa-coffee"></i>
                        <strong>alert</strong> Be careful with what you change.
                    </div>
                    <br />
                    <h3>Personal info</h3>

                    <form class="form-horizontal" role="form">
                        <div class="form-group">
                            <!--<label class="col-lg-3 control-label">Name:</label>-->
                            <div class="form-outline flex-fill mb-0">
                                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @type = "text", @Name = "Name" } })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-3 control-label">First Last Name:</label>
                            <div class="col-lg-8">
                                @Html.EditorFor(model => model.First_last_name, new { htmlAttributes = new { @class = "form-control", @type = "text", @First_last_name = "@First_last_name" } })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-3 control-label">Last name:</label>
                            <div class="col-lg-8">
                                @Html.EditorFor(model => model.Second_last_name, new { htmlAttributes = new { @class = "form-control", @type = "text", @Second_last_name = "Second_last_name" } })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-3 control-label">Identification:</label>
                            <div class="col-lg-8">
                                @Html.EditorFor(model => model.Identification, new { htmlAttributes = new { @class = "form-control", @type = "text", @Identification = "Identification" } })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-3 control-label">Phone number:</label>
                            <div class="col-lg-8">

                                @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control", @type = "text", @Phone = "Phone" } })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-3 control-label">Email:</label>
                            <div class="col-lg-8">
                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @type = "text", @Email = "Email" } })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-3 control-label">Address:</label>
                            <div class="col-lg-8">
                                @Html.TextBoxFor(Model => Model.Address, new { @class = "form-control", @id = "inputAddress", @placeholder = "1234 Main St" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-3 control-label">BirthDate:</label>
                            <div class="col-lg-8">
                                @Html.TextBoxFor(Model => Model.Birth_date, new { @class = "form-control", @id = "inputBirthDate", @type = "date" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-lg-3 control-label">New Password:</label>
                            <div class="col-lg-8">
                                @Html.TextBoxFor(Model => Model.Password, new { @class = "form-control", @id = "inputPassword", @type = "password" })
                                <i class="far fa-eye" id="togglePassword" onclick="TogglePass()"></i>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-lg-3 control-label">Password Confirmation:</label>
                            <div class="col-lg-8">
                                @Html.TextBoxFor(Model => Model.Password, new { @class = "form-control", @id = "inputPassword2", @type = "password" })
                                <i class="far fa-eye" id="togglePassword2" onclick="TogglePass()"></i>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" onclick="ConsultaPassword()" value="Save" class="btn btn-primary" Id=sesion.Id />

                                <button type="reset" class="btn btn-danger">Clear</button>
                            </div>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    }
}
@section Scripts{
    <script src="~/Funciones/ConsultaUsuario.js"></script>
    <script src="~/Funciones/Password.js"></script>
}
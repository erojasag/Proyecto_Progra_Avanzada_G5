@model  Aplicacion.Entities.Users
@using Aplicacion.Entities

@{
    var sesion = ((Users)Session["User"]);
}

@using (Html.BeginForm("ForgotPassword", "Users", FormMethod.Post))
{
    <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="card text-center " style="width: 300px;">
            <div class="card-header h5 text-white bg-primary">Password Reset</div>
            <div class="card-body px-5">
                <p class="card-text py-2">
                    Enter your email address and we'll send you an email with instructions to reset your password.
                </p>
                <div class="form-outline">
                    @Html.TextBoxFor(Model => Model.Email, new { @class = "form-control my-3", @placeholder = "Enter your Email", @id = "typeEmail", @required = "required", @type="email"})   
                </div>
                <button type="submit" class="btn btn-primary w-100">Reset password</button>
                <div class="d-flex justify-content-between mt-4">
                    <a class="" href="@Url.Action("UserLogIn", "LogIn")">Login</a>
                    <a class="" href="@Url.Action("UserRegistration", "LogIn")">Register</a>
                </div>
            </div>
        </div>
    </div>

}

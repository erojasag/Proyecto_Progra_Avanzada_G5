@model  Aplicacion.Entities.Product



@using (Html.BeginForm("ValidateProduct", "Product", FormMethod.Post))
{
    <section class="vh-100" style="background-color: #eee;">
        <div class="container h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-lg-12 col-xl-11">
                    <div class="card text-black" style="border-radius: 25px;">
                        <div class="card-body p-md-5">
                            <div class="row justify-content-center">
                                <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
                                    <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Add product</p>
                                    <form class="mx-1 mx-md-4">


                                        <div class="d-flex flex-row align-items-center mb-4">

                                            <div class="form-outline flex-fill mb-0">
                                                @Html.TextBoxFor(Model => Model.Id, new { @class = "form-control", @placeholder = "Product ID" })
                                                <label class="form-label" for="form3Example1c">Product ID</label>
                                            </div>
                                        </div>

                                        <div class="d-flex flex-row align-items-center mb-4">

                                            <div class="form-outline flex-fill mb-0">
                                                @Html.TextBoxFor(Model => Model.Brand_Id, new { @class = "form-control", @placeholder = "Brand ID" })
                                                <label class="form-label" for="form3Example3c">Brand ID</label>
                                            </div>
                                        </div>

                                        <div class="d-flex flex-row align-items-center mb-4">
                                            <div class="form-outline flex-fill mb-0">
                                                @Html.TextBoxFor(Model => Model.Price, new { @class = "form-control", @placeholder = "Price" })
                                                <label class="form-label" for="form3Example4c">Price</label>
                                            </div>
                                        </div>

                                        <div class="d-flex flex-row align-items-center mb-4">

                                            <div class="form-outline flex-fill mb-0">
                                                
                                                @Html.TextBoxFor(Model => Model.Stock, new { @class = "form-control", @placeholder = "Stock", @type="number" })
                                                <label class="form-label" for="form3Example4cd">Stock</label>
                                            </div>
                                        </div>
                                        <div class="d-flex flex-row align-items-center mb-4">

                                            <div class="form-outline flex-fill mb-0">
                                                
                                                @Html.TextBoxFor(Model => Model.Model, new { @class = "form-control", @placeholder = "Model" })
                                                <label class="form-label" for="form3Example4cd">Model</label>
                                            </div>
                                        </div>
                                        <div class="d-flex flex-row align-items-center mb-4">

                                            <div class="form-outline flex-fill mb-0">
                                                
                                                @Html.TextBoxFor(Model => Model.Color, new { @class = "form-control", @placeholder = "Color" })
                                                <label class="form-label" for="form3Example4cd">Color</label>
                                            </div>
                                        </div>
                                        <div class="d-flex flex-row align-items-center mb-4">

                                            <div class="form-outline flex-fill mb-0">
                                                
                                                @Html.TextBoxFor(Model => Model.shoeSize, new { @class = "form-control", @placeholder = "Size" })
                                                <label class="form-label" for="form3Example4cd">Size</label>
                                            </div>
                                        </div>
                                        <div class="d-flex flex-row align-items-center mb-4">
                                            <div class="form-outline flex-fill mb-0">
                                                
                                                @Html.TextBoxFor(Model => Model.Photo, new { @class = "form-control", @type="file" })
                                                <label class="form-label" for="customFile">Photo</label>
                                            </div>
                                        </div>

                                        <div class="btn-toolbar" role="toolbar" aria-label="Toolbar with button groups">
                                            <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                                <div class="btn-group mr-2" role="group" aria-label="First group">
                                                    <button type="submit" class="btn btn-primary btn-lg">Add Product</button>
                                                </div>
                                                <div class="btn-group mr-2" role="group" aria-label="Second group">
                                                    <button type="reset" class="btn btn-danger btn-lg">Clear</button>
                                                </div>

                                            </div>
                                        </div>
                                    </form>
                                </div>
                                <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">
                                    <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                                         class="img-fluid" alt="Sample image">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}
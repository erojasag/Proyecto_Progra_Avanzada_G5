@model  IEnumerable<Aplicacion.Entities.Product>
@using Aplicacion.Entities

@{
    var sesion = ((Users)Session["User"]);
}

<h2 class="title" style="color:darkblue;"> Our Products </h2>

<div class="container">
    @Html.Hidden("IdMsj", (string)ViewBag.Mensaje)
    @if (sesion != null)//sin loguearse
    {

        if (sesion.User_Role != 0 && sesion.User_Role == 3)
        {
            <table id="tbProducts" class="table table-striped table-bordered table-sm">
                <thead class="bg-light">
                    <tr>
                        <th @Html.DisplayNameFor(model => model.Brand.Name)>Brand</th>
                        <th @Html.DisplayNameFor(model => model.Model)>Model</th>
                        <th @Html.DisplayNameFor(model => model.Color)>Color</th>
                        <th @Html.DisplayNameFor(model => model.shoeSize)>Size</th>
                        <th @Html.DisplayNameFor(model => model.Photo)>Photo</th>
                        <th>Accion</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="ms-3">
                                        <p class="fw-bold mb-1">@item.Brand.Name</p>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <p class="fw-normal mb-1"></p>
                                <p class="text-muted mb-0">@item.Model</p>
                            </td>
                            <td>@item.Color</td>
                            <td>@item.shoeSize</td>
                            <td>
                                <img src="@item.Photo"
                                     style="width: 65px; height: 65px"
                                     class="rounded-circle" />
                            </td>
                            <td>
                                @Html.ActionLink("Add to Shopping Cart", "Add", new { Id = item.Id }, new { @class = "btn btn-primary" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }



        if (sesion != null && sesion.User_Role == 1) //admin
        {

            <table id="tbProducts" class="table table-striped table-bordered table-sm">
                <thead>
                    <tr>
                        <th @Html.DisplayNameFor(model => model.Id)>ID</th>
                        <th @Html.DisplayNameFor(model => model.Brand.Name)>Brand</th>
                        <th @Html.DisplayNameFor(model => model.Model)>Model</th>
                        <th @Html.DisplayNameFor(model => model.Color)>Color</th>
                        <th @Html.DisplayNameFor(model => model.shoeSize)>Size</th>
                        <th @Html.DisplayNameFor(model => model.Price)>Price</th>
                        <th @Html.DisplayNameFor(model => model.Stock)>Stock</th>
                        <th @Html.DisplayNameFor(model => model.Photo)>Photo</th>
                        <th>Action</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <p class="text-muted mb-0">@item.Id</p>
                            </td>
                            <td>
                                <div class="d-flex align-items-center">

                                    <div class="ms-3">
                                        <p class="fw-bold mb-1">@item.Brand.Name</p>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <p class="text-muted mb-0">@item.Model</p>
                            </td>
                            <td>
                                <p class="fw-normal mb-1">@item.Color</p>
                            </td>
                            <td>
                                <p class="fw-normal mb-1">@item.shoeSize</p>
                            </td>
                            <td>
                                <p class="fw-normal mb-1">@item.Price</p>
                            </td>
                            <td>
                                <p class="fw-normal mb-1">@item.Stock</p>
                            </td>
                            <td>
                                <img src="@item.Photo"
                                     style="width: 65px; height: 65px"
                                     class="rounded-circle" />
                            </td>
                            <td>
                                @Html.ActionLink("Editar", "EditProduct", new { Id = item.Id }, new { @class = "btn btn-primary" })
                            </td>
                            <td>
                                @Html.ActionLink("Eliminar", "DeleteProduct", new { Id = item.Id }, new { @class = "btn btn-primary" })
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        }


        if (sesion.User_Role != 0 && sesion.User_Role == 2)//cajero
        {
            <table id="tbProducts" class="table table-striped table-bordered table-sm">
                <thead>
                    <tr>
                        <th @Html.DisplayNameFor(model => model.Id)>ID</th>
                        <th @Html.DisplayNameFor(model => model.Brand.Name)>Brand</th>
                        <th @Html.DisplayNameFor(model => model.Model)>Model</th>
                        <th @Html.DisplayNameFor(model => model.Color)>Color</th>
                        <th @Html.DisplayNameFor(model => model.shoeSize)>Size</th>
                        <th @Html.DisplayNameFor(model => model.Price)>Price</th>
                        <th @Html.DisplayNameFor(model => model.Stock)>Stock</th>
                        <th @Html.DisplayNameFor(model => model.Photo)>Photo</th>
                        <th>Action</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <p class="text-muted mb-0">@item.Id</p>
                            </td>
                            <td>
                                <div class="d-flex align-items-center">

                                    <div class="ms-3">
                                        <p class="fw-bold mb-1">@item.Brand.Name</p>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <p class="text-muted mb-0">@item.Model</p>
                            </td>
                            <td>
                                <p class="fw-normal mb-1">@item.Color</p>
                            </td>
                            <td>
                                <p class="fw-normal mb-1">@item.shoeSize</p>
                            </td>
                            <td>
                                <p class="fw-normal mb-1">@item.Price</p>
                            </td>
                            <td>
                                <p class="fw-normal mb-1">@item.Stock</p>
                            </td>
                            <td>
                                <img src="@item.Photo"
                                     style="width: 65px; height: 65px"
                                     class="rounded-circle" />
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "EditProduct", new { Id = item.Id }, new { @class = "btn btn-primary" })
                            </td>
                            <td>
                                @Html.ActionLink("Delete", "DeleteProduct", new { Id = item.Id }, new { @class = "btn btn-primary" })
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        }

    }
    else
    {
        <table id="tbProducts" class="table table-striped table-bordered table-sm">
            <thead class="bg-light">
                <tr>
                    <th @Html.DisplayNameFor(model => model.Brand.Name)>Brand</th>
                    <th @Html.DisplayNameFor(model => model.Model)>Model</th>
                    <th @Html.DisplayNameFor(model => model.Color)>Color</th>
                    <th @Html.DisplayNameFor(model => model.shoeSize)>Size</th>
                    <th @Html.DisplayNameFor(model => model.Photo)>Photo</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <div class="d-flex align-items-center">
                                <div class="ms-3">
                                    <p class="fw-bold mb-1">@item.Brand.Name</p>
                                </div>
                            </div>
                        </td>
                        <td>
                            <p class="fw-normal mb-1"></p>
                            <p class="text-muted mb-0">@item.Model</p>
                        </td>
                        <td>@item.Color</td>
                        <td>@item.shoeSize</td>
                        <td>
                            <img src="@item.Photo"
                                 style="width: 65px; height: 65px"
                                 class="rounded-circle" />
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>




@section Scripts{
    <script src="~/Funciones/ConsultaProductos.js"></script>
    <script src="~/Funciones/DeleteProduct.js"></script>
}

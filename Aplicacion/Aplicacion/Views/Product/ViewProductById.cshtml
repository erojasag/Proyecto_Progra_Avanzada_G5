@model Aplicacion.Entities.Product

@{

}


<div class="container">
    <form action="ViewProductById" method="get">
        <table class="table">
            <tr>
                <td>Product ID: </td>
                <td><input type="text" name="Id" /></td>
            </tr>
        </table>
        <div class="btn-toolbar" role="toolbar" aria-label="Toolbar with button groups">
            <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                <div class="btn-group mr-2" role="group" aria-label="First group">
                    <button type="button" class="btn btn-primary btn-sm">Search</button>
                </div>
                <div class="btn-group mr-2" role="group" aria-label="Second group">
                    <button type="reset" class="btn btn-danger btn-sm">Clear</button>
                </div>

            </div>
        </div>
    </form>

    <table id="productsCustomer" class="table table-striped table-bordered table-sm">
        <thead class="bg-light">
            <tr>
                <th @Html.DisplayNameFor(model => model.Brand.Name)>Brand</th>
                <th @Html.DisplayNameFor(model => model.Model)>Model</th>
                <th @Html.DisplayNameFor(model => model.Color)>Color</th>
                <th @Html.DisplayNameFor(model => model.shoeSize)>Size</th>
                <th @Html.DisplayNameFor(model => model.Photo)>Photo</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    <div class="d-flex align-items-center">
                        <div class="ms-3">
                            <p class="fw-bold mb-1"></p>
                        </div>
                    </div>
                </td>
                <td>
                    <p class="fw-normal mb-1"></p>
                    <p class="text-muted mb-0"></p>
                </td>
                <td></td>
                <td></td>
                <td>
                    <img src=""
                            style="width: 65px; height: 65px"
                            class="rounded-circle" />
                </td>
            </tr>
        </tbody>
    </table>

</div>



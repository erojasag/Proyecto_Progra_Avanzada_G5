@model Aplicacion.Entities.Product

@{

}



<div class="input-group">
    <div class="form-outline">
        <input type="search" id="Id" class="form-control" placeholder="Search" />
    </div>
    <button type="button" onclick="" class="btn btn-primary">
        <i class="fas fa-search"></i>
    </button>
</div>

<div class="container">
    <table id="productsCustomer" class="table table-striped table-bordered table-sm">
        <thead>
            <tr>
                <th @Html.DisplayNameFor(model => model.Brand.Name)>Brand</th>
                <th @Html.DisplayNameFor(model => model.Model)>Model</th>
                <th @Html.DisplayNameFor(model => model.Color)>Color</th>
                <th @Html.DisplayNameFor(model => model.shoeSize)>Size</th>
                <th @Html.DisplayNameFor(model => model.Price)>Price</th>
                <th @Html.DisplayNameFor(model => model.Stock)>Stock</th>
                <th @Html.DisplayNameFor(model => model.Photo)>Photo</th>
                <th></th>
            </tr>
        </thead>
        <tbody>

            <tr>
                <td>
                    <div class="d-flex align-items-center">

                        <div class="ms-3">
                            <p class="fw-bold mb-1">@Html.DisplayFor(model => model.Brand.Name)</p>
                        </div>
                    </div>
                </td>
                <td>
                    <p class="text-muted mb-0">@Html.DisplayFor(model => model.Model)</p>
                </td>
                <td>
                    <p class="fw-normal mb-1">@Html.DisplayFor(model => model.Color)</p>
                </td>
                <td>
                    <p class="fw-normal mb-1">@Html.DisplayFor(model => model.shoeSize)</p>
                </td>
                <td>
                    <p class="fw-normal mb-1">@Html.DisplayFor(model => model.Price)</p>
                </td>
                <td>
                    <p class="fw-normal mb-1">@Html.DisplayFor(model => model.Stock)</p>
                </td>
                <td>
                    <img src="@Html.DisplayFor(model => model.Photo)"
                         style="width: 65px; height: 65px"
                         class="rounded-circle" />
                </td>
                <td>
                    <button type="button" class="btn btn-link btn-sm btn-rounded">
                        Edit
                    </button>
                </td>
            </tr>


        </tbody>
    </table>
</div>


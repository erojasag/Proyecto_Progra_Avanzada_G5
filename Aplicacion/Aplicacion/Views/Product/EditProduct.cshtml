@model Aplicacion.Entities.Product

@if (Session["User_Role"] != null) //estamos logueados como empleados != not null
{

    using (Html.BeginForm("EditProduct", "Product", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="container bootstrap snippets bootdey">
            <hr>
            <div class="row">
                <!-- left column -->
                <div class="col-md-3">
                    <div class="text-center">
                        <img src="@Html.DisplayFor(model => model.Photo)" class="avatar img-circle img-thumbnail" alt="Photo">
                        <h6>Upload a different photo...</h6>
                        <input type="file" class="form-control">
                    </div>
                </div>

                <!-- edit form column -->
                <div class="col-md-9 personal-info">
                    <div class="alert alert-info alert-dismissable">
                        <a class="panel-close close" data-dismiss="alert">×</a>
                        <i class="fa fa-coffee"></i>
                        This is an <strong>alert</strong> Use this to show important messages to the user.
                    </div>
                    <h3>Product info</h3>

                    <form class="form-horizontal" role="form">
                        <div class="form-group">
                            <label class="col-lg-3 control-label">Product ID:</label>
                            <div class="col-lg-8">
                                @Html.EditorFor(model => model.Id, new { htmlAttributes = new { @class = "form-control", @type = "text", @placeholder = "Product ID" } })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-3 control-label">Price:</label>
                            <div class="col-lg-8">
                                @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control", @type = "text", @placeholder = "Price" } })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-3 control-label">Stock:</label>
                            <div class="col-lg-8">
                                @Html.EditorFor(model => model.Stock, new { htmlAttributes = new { @class = "form-control", @type = "number", @placeholder = "" } })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-3 control-label">Model:</label>
                            <div class="col-lg-8">
                                @Html.EditorFor(model => model.Model, new { htmlAttributes = new { @class = "form-control", @type = "text", @placeholder = "Model" } })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-3 control-label">Color:</label>
                            <div class="col-lg-8">
                                @Html.EditorFor(model => model.Color, new { htmlAttributes = new { @class = "form-control", @type = "text", @placeholder = "Color" } })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-3 control-label">Size:</label>
                            <div class="col-lg-8">
                                @Html.EditorFor(model => model.shoeSize, new { htmlAttributes = new { @class = "form-control", @type = "text", @placeholder = "Size" } })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-3 control-label">Brand:</label>
                            <div class="col-lg-8">
                                <div class="ui-select">
                                    <select id="brand_id_selector" class="form-control">
                                        <option selected>Select a Brand</option>
                                        <option value="1">Nike</option>
                                        <option value="2">Adidas</option>
                                        <option value="3">New Balance</option>
                                        <option value="4">Project Rock</option>
                                        <option value="5">Puma</option>
                                        <option value="6">Sperry</option>
                                        <option value="7">Yeezy</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                            <div class="btn-group mr-2" role="group" aria-label="First group">
                                <button type="submit" class="btn btn-primary btn-lg">Save</button>
                            </div>
                            <div class="btn-group mr-2" role="group" aria-label="Second group">
                                <button type="reset" class="btn btn-danger btn-lg">Clear</button>
                            </div>
                            <div class="btn-group mr-2" role="group" aria-label="Second group">
                                @Html.ActionLink("Home", "ViewProducts", "Products", new { @class = "btn btn-danger btn-lg" })
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    }
}




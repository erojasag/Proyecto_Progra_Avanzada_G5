@model Aplicacion.Entities.Product

@using Aplicacion.Entities

@{
    var sesion = ((Users)Session["User"]);
}

@if (sesion.User_Role != 0) //estamos logueados como empleados != not null
{

    using (Html.BeginForm("EditProduct", "Product", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="container bootstrap snippets bootdey">
            <hr>
            <div class="row">
                <!-- left column -->
                <div class="col-md-3">
                    <div class="text-center">
                        <img src="@Html.DisplayFor(model => model.Photo)" class="avatar img-circle img-thumbnail" alt="Photo">
                        <h6>Upload a different photo...</h6>
                        <input type="file" class="form-control">
                    </div>
                </div>
                @Html.Hidden("IdMsj", (string)ViewBag.Mensaje)
                <!-- edit form column -->
                <div class="col-md-9 personal-info">
                    <div class="alert alert-info alert-dismissable">
                        <a class="panel-close close" data-dismiss="alert">×</a>
                        <i class="fa fa-coffee"></i>
                        Edit your <strong>Products</strong> Using this page.
                    </div>
                    <h3>Product info</h3>

                    <form class="form-horizontal" role="form">
                        <div class="form-group">
                            <label class="col-lg-3 control-label">Product ID:</label>
                            <div class="col-lg-8">
                                @Html.EditorFor(model => model.Id, new { htmlAttributes = new { @class = "form-control", @type = "text", @placeholder = "Product ID", @readonly = "readonly"} })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-3 control-label">Price:</label>
                            <div class="col-lg-8">
                                @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control", @type = "text", @placeholder = "Price" } })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-3 control-label">Stock:</label>
                            <div class="col-lg-8">
                                @Html.EditorFor(model => model.Stock, new { htmlAttributes = new { @class = "form-control", @type = "number", @placeholder = "" } })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-3 control-label">Model:</label>
                            <div class="col-lg-8">
                                @Html.EditorFor(model => model.Model, new { htmlAttributes = new { @class = "form-control", @type = "text", @placeholder = "Model" } })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-3 control-label">Color:</label>
                            <div class="col-lg-8">
                                @Html.EditorFor(model => model.Color, new { htmlAttributes = new { @class = "form-control", @type = "text", @placeholder = "Color" } })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-3 control-label">Size:</label>
                            <div class="col-lg-8">
                                @Html.EditorFor(model => model.shoeSize, new { htmlAttributes = new { @class = "form-control", @type = "text", @placeholder = "Size" } })
                            </div>
                        </div>
                        <div class="form-group">

                            @{
                                List<SelectListItem> listaBrands = new List<SelectListItem>();
                                listaBrands.Add(new SelectListItem
                                {
                                    Text = "--Select--",
                                    Value = "",
                                    Selected = true
                                });
                                listaBrands.Add(new SelectListItem
                                {
                                    Text = "Nike",
                                    Value = "1"
                                });
                                listaBrands.Add(new SelectListItem
                                {
                                    Text = "Adidas",
                                    Value = "2"
                                });
                                listaBrands.Add(new SelectListItem
                                {
                                    Text = "New Balance",
                                    Value = "3"
                                });
                                listaBrands.Add(new SelectListItem
                                {
                                    Text = "Project Rock",
                                    Value = "4"
                                });
                                listaBrands.Add(new SelectListItem
                                {
                                    Text = "Puma",
                                    Value = "5"
                                });
                                listaBrands.Add(new SelectListItem
                                {
                                    Text = "Sperry",
                                    Value = "6"
                                });
                                listaBrands.Add(new SelectListItem
                                {
                                    Text = "Yeezy",
                                    Value = "7"
                                });
                            }
                            <label class="col-lg-3 control-label">Rol:</label>
                            @Html.DropDownListFor(model => model.Brand_Id, listaBrands, new { @class = "form-control" })
                        </div>
                        <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                            <div class="btn-group mr-2" role="group" aria-label="First group">
                                <button type="submit" class="btn btn-primary btn-lg">Save</button>
                            </div>
                            <div class="btn-group mr-2" role="group" aria-label="Second group">
                                <button type="reset" class="btn btn-danger btn-lg">Clear</button>
                            </div>
                            <div class="btn-group mr-2" role="group" aria-label="Second group">
                                @Html.ActionLink("Home", "ViewProducts", "Products", new { @class = "btn btn-danger btn-lg" })
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    }
}



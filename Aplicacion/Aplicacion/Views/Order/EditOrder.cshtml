@model Aplicacion.Entities.Orders

@using Aplicacion.Entities
@{
    var sesion = ((Users)Session["User"]);
}

<h2>EditOrder</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Orders</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    @Html.HiddenFor(Model => Model.Id, new { @class = "form-control", @Id = "Id", @readonly = "readonly" })
    

    <div class="form-group">
        <label class="control-label col-md-2">Nombre Completo</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.NombreCompleto, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.NombreCompleto, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Productos</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Product, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Product, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Total de la orden</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Order_total, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Order_total, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-primary btn-lg" />
        </div>
    </div>
</div>

    <div>
        @Html.ActionLink("Back to List", "ViewCustomersDetailedOrders", new { Id = sesion.Id})
    </div>
}



@model  IEnumerable<Aplicacion.Entities.Orders>

@using Aplicacion.Entities

@{
    var sesion = ((Users)Session["User"]);
}

@{
    ViewBag.Title = "ViewCustomersOrders";


}


<h2>My Orders</h2>


@if (sesion.User_Role != 0)
{
    <div class="container">
        <table class="table">
            <thead>
                <tr>
                    <th @Html.DisplayNameFor(model => model.Id)>Order ID</th>
                    <th @Html.DisplayNameFor(model => model.NombreCompleto)>Customer Name</th>
                    <th @Html.DisplayNameFor(model => model.Product)>First Product</th>
                    <th @Html.DisplayNameFor(model => model.Order_date)>Order Date</th>
                    <th @Html.DisplayNameFor(model => model.Order_total)>Order Amount</th>
                    <th @Html.DisplayNameFor(model => model.Status)>Order Status</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.NombreCompleto</td>
                        <td>@item.Product</td>
                        <td>@item.Order_date</td>
                        <td>@item.Order_total</td>
                        <td>@item.Status</td>
                        <td>
                            @Html.ActionLink("View Details", "ViewOrderStatus", "Orders", new { Id = item.Id }, new { @class = "btn btn-primary" })
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
}


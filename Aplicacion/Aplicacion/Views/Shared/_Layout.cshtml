<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>ShoeCorp</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        @if (Session["Logged_In"] == null) //no estamos logueados
        {
            <nav class="main-header navbar navbar-expand navbar-white navbar-light">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                    </li>
                </ul>
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        @Html.ActionLink("Sign Up", "UserRegistration", "Home", null, new { @class = "nav-link"})
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("LogIn", "UserLogIn", "Home", null, new { @class = "nav-link" })
                    </li>

                </ul>
            </nav>



            <aside class="main-sidebar sidebar-dark-primary elevation-4">
                <a href="@Url.Action("Index", "Home")" class="brand-link">
                    <img src="~/adminlte/img/AdminLTELogo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
                    <span class="brand-text font-weight-light">ShoeCorp</span>
                </a>

                <!-- Sidebar -->
                <div class="sidebar">
                    <nav class="mt-2">
                        <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                            <li class="nav-item menu">
                                <a class="nav-link active">
                                    <i class="nav-icon fa fa-shopping-basket" aria-hidden="true"></i>
                                    <p>
                                        Products
                                        <i class="right fas fa-angle-left"></i>
                                    </p>
                                </a>
                                <ul class="nav nav-treeview">
                                    <li class="nav-item">
                                        <a href="@Url.Action("ViewProducts", "Product")" class="nav-link active">
                                            <i class="nav-icon fa fa-list"></i>
                                            <p>View List Of Products</p>
                                        </a>
                                    </li>
                                </ul>
                            </li>
                            <li class="nav-item menu">
                                <a href="#" class="nav-link active">
                                    <i class="nav-icon fas fa-shoe-prints"></i>
                                    <p>
                                        Brands
                                        <i class="right fas fa-angle-left"></i>
                                    </p>
                                </a>
                                <ul class="nav nav-treeview">
                                    <li class="nav-item">
                                        <a href="@Url.Action("ViewBrands", "Brand")" class="nav-link active">
                                            <i class="nav-icon fa fa-list"></i>
                                            <p>List Of Brands</p>
                                        </a>
                                    </li>
                                </ul>
                            </li>
                            <li class="nav-item menu">
                                <a href="@Url.Action("Contact", "Home")" class="nav-link active">
                                    <i class="nav-icon fa fa-info-circle" aria-hidden="true">

                                    </i>
                                    <p>
                                        Contact
                                    </p>
                                </a>

                            </li>
                        </ul>
                    </nav>
                    <!-- /.sidebar-menu -->
                </div>
                <!-- /.sidebar -->
            </aside>
        }
        @if (Session["Logged_In"] != null)//si estamos logueados como empleados
        {
            <nav class="main-header navbar navbar-expand navbar-white navbar-light">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                    </li>
                </ul>
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a href="@Url.Action("EditUserPerson", "Persons")" class="nav-link active">
                            <p><i class="nav-icon fa fa-user" aria-hidden="true" value="Profile"></i></p>
                        </a>
                    </li>
                </ul>
            </nav>
            <aside class="main-sidebar sidebar-dark-primary elevation-4">
                <a href="@Url.Action("Index", "Home")" class="brand-link">
                    <img src="~/adminlte/img/AdminLTELogo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
                    <span class="brand-text font-weight-light">ShoeCorp</span>
                </a>

                <!-- Sidebar -->
                <div class="sidebar">
                    <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                        <div class="image">
                            <img src="~/adminlte/img/user2-160x160.jpg" class="img-circle elevation-2" alt="User Image">
                        </div>
                        <div class="info">
                            <a href="#" class="d-block">Emanuel Rojas</a>
                        </div>
                    </div>

                    <nav class="mt-2">
                        <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                            <li class="nav-item menu">
                                <a href="#" class="nav-link active">
                                    <i class="nav-icon fas fa-tachometer-alt"></i>
                                    <p>
                                        Products
                                        <i class="right fas fa-angle-left"></i>
                                    </p>
                                </a>
                                <ul class="nav nav-treeview">
                                    <li class="nav-item">
                                        <a href="@Url.Action("ViewProducts", "Product")" class="nav-link active">
                                            <i class="far fa-circle nav-icon"></i>
                                            <p>View List Of Products</p>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a href="@Url.Action("ViewProductById", "Product")" class="nav-link active">
                                            <i class="far fa-circle nav-icon"></i>
                                            <p>Search product By Id</p>
                                        </a>
                                    </li>
                                </ul>
                            </li>
                            <li class="nav-item menu">
                                <a href="#" class="nav-link active">
                                    <i class="nav-icon fas fa-tachometer-alt"></i>
                                    <p>
                                        Brands
                                        <i class="right fas fa-angle-left"></i>
                                    </p>
                                </a>
                                <ul class="nav nav-treeview">
                                    <li class="nav-item">
                                        <a href="@Url.Action("ViewBrands", "Brand")" class="nav-link active">
                                            <i class="far fa-circle nav-icon"></i>
                                            <p>List Of Brands</p>
                                        </a>
                                    </li>

                                </ul>
                            </li>
                            <li class="nav-item menu">
                                <a href="#" class="nav-link active">
                                    <i class="nav-icon fas fa-tachometer-alt"></i>
                                    <p>
                                        Users
                                        <i class="right fas fa-angle-left"></i>
                                    </p>
                                </a>
                                <ul class="nav nav-treeview">
                                    <li class="nav-item">
                                        <a href="@Url.Action("ViewPersonsWithUsers", "Persons")" class="nav-link active">
                                            <i class="far fa-circle nav-icon"></i>
                                            <p>View List Of Users</p>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a href="@Url.Action("CheckPersonAndUserById", "Persons")" class="nav-link active">
                                            <i class="far fa-circle nav-icon"></i>
                                            <p>Search user By Id</p>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a href="@Url.Action("InsertPersonWithUser", "Persons")" class="nav-link active">
                                            <i class="far fa-circle nav-icon"></i>
                                            <p>Insert user</p>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a href="@Url.Action("DeletePersonAndUserById", "Persons")" class="nav-link active">
                                            <i class="far fa-circle nav-icon"></i>
                                            <p>Delete user</p>
                                        </a>
                                    </li>
                                </ul>
                            </li>
                            <li class="nav-item">
                                <a href="@Url.Action("Contact", "Home")" class="nav-link active">
                                    <i class="far fa-circle nav-icon"></i>
                                    <p>Contact</p>
                                </a>
                            </li>
                        </ul>
                    </nav>
                    <!-- /.sidebar-menu -->
                </div>
                <!-- /.sidebar -->
            </aside>
        }

        <div class="content-wrapper">
            <div class="content-header">
                <div class="container-fluid">
                    <h1 class="m-0 text-dark">@ViewBag.Title</h1>

                    @*<div class="row mb-2">
                        <div class="col-sm-6">
                            <h1 class="m-0 text-dark">@ViewBag.Title</h1>
                        </div>
                        <div class="col-sm-6">
                            <ol class="breadcrumb float-sm-right">
                                @if (@ViewContext.RouteData.Values["controller"].ToString() != "Home" ||
                                    @ViewContext.RouteData.Values["action"].ToString() != "Index")
                                {
                                    <li class="breadcrumb-item">

                                    </li>
                                }
                                <li class="breadcrumb-item active">@ViewBag.Title</li>
                            </ol>
                        </div>
                    </div>*@

                </div>
            </div>

            <div class="content">
                <div class="container-fluid">

                    @RenderBody()

                </div>
            </div>
        </div>

        <footer class="main-footer">

            <div class="float-right d-none d-sm-inline">
            </div>
            <strong>Copyright &copy;</strong> Grupo 5 @DateTime.Now.Year
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/adminlte/js")
    @RenderSection("scripts", required: false)

</body>
</html>
